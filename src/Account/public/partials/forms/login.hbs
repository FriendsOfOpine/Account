<form class="ui form" data-xhr="true" method="post" action="/Account/api/form/Login">

    <div class="ui warning message">
        <i class="close icon"></i>
        <div class="header">There was a problem</div>
        <ul class="list"></ul>
    </div>

    <div class="required field">
        <label>Email</label>
        <div class="ui icon input">
            {{{email}}}
            <i class="user icon"></i>
        </div>
    </div>

    <div class="required field">
        <label>Password</label>
        <div class="ui icon input">
            {{{password}}}
            <i class="lock icon"></i>
        </div>
    </div>

    <input type="hidden" name="Account__Form__Login[route]" value="/Manager" />

    {{{id}}}
    {{{form-token}}}

    <input type="submit" class="fluid ui blue submit button" value="Login" />
</form>